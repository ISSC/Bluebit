<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	>
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/turquoise"
		android:layout_weight="1"
		>
		<TextView
			android:id="@+id/kg"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/small_gutter"
			android:layout_centerInParent="true"
			android:textSize="150dp"
			android:text="0.0"
			style="@style/flat_white"
			/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"
			android:padding="@dimen/small_gutter"
			android:textSize="22sp"
			android:text="kg"
			style="@style/flat_white"
			/>
		<ProgressBar
			android:id="@+id/loader"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:visibility="invisible"
			/>
	</RelativeLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@color/orange"
			android:layout_weight="1"
			>
			<TextView
				android:id="@+id/lb"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:textSize="75sp"
				android:text="0.0"
				style="@style/flat_white"
				/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_alignParentLeft="true"
				android:padding="@dimen/small_gutter"
				android:textSize="22sp"
				android:text="lb"
				style="@style/flat_white"
				/>
		</RelativeLayout>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@color/alizarin"
			android:layout_weight="1"
			>
			<TextView
				android:id="@+id/st"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:textSize="75sp"
				android:text="0.0"
				style="@style/flat_white"
				/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_alignParentRight="true"
				android:padding="@dimen/small_gutter"
				android:gravity="center_vertical"
				android:textSize="22sp"
				android:text="st"
				style="@style/flat_white"
				/>
		</RelativeLayout>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:background="@color/belize_hole"
		android:onClick="onClickName"
		>
		<TextView
			android:id="@+id/weight_name"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:textSize="22sp"
			android:text="Weight Scale"
			style="@style/flat_white"
			/>
	</LinearLayout>

</LinearLayout>
